@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-6">
        <a asp-action="Create" class="btn btn-info">New Product</a>
    </div>
</div>
<br />
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(c => c.Name)</th>
            <th>@Html.DisplayNameFor(c => c.Color)</th>
            <th>@Html.DisplayNameFor(c => c.Image)</th>
            <th>@Html.DisplayNameFor(c => c.Price)</th>
            <th>@Html.DisplayNameFor(c => c.IsAvailable)</th>
            <th>Acion</th>
        </tr>
        @foreach (var data in Model)
        {
            <tr>
                <td> @data.Name</td>
                <td> @data.Color</td>
                <td> <img src="~/@data.Image" width="100px" height="100px" /></td>
                <td> @data.Price</td>
                <td> @data.IsAvailable</td>
                <td><partial name="~/Views/Shared/_ButtonPartial.cshtml" model="@data.Id" /></td>
            </tr>
        }
    </table>
</div>
